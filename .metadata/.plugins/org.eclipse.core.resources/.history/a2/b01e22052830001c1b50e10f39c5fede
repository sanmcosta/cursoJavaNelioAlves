package entities;

public class Account {

	private static int number;
	private static String holder;
	private static double balance;
	private static double taxaSaque = 5.00;

	private Account(int number, String holder, double balance) {
		this.number = number;
		this.holder = holder;
		this.balance = balance;
	}

	public int getNumber() {
		return number;
	}

	public void setNumber(int number) {
		if (this.number == 0)
			this.number = number;
	}

	public String getHolder() {
		return holder;
	}

	public void setHolder(String holder) {
		this.holder = holder;
	}

	public double getBalance() {
		return balance;
	}

	private static void addBalance(double value) {
		balance += value - taxaSaque;
	}

	private void removeBalance(double value) {
		balance -= value;
	}

	public String toString() {
		return String.format("Account %d, Holder: %s, Balance: $%.2f", number, holder, balance);
	}

}
