package application;

import java.util.Scanner;

public class Matrix2 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		System.out.println("Informe o número de linhas: ");
		int linha = sc.nextInt();
		sc.nextLine();

		System.out.println("Informe o número de colunas: ");
		int coluna = sc.nextInt();

		sc.nextLine();

		int[][] vect = new int[linha][coluna];

		for (int i = 0; i < vect.length; i++) {
			for (int j = 0; j < vect[i].length; j++) {
				int valor = sc.nextInt();
				vect[i][j] = valor;
			}
		}

		int pesq = sc.nextInt();

		for (int i = 0; i < vect.length; i++) {
			for (int j = 0; j < vect[i].length; j++) {
				if (vect[i][j] == pesq) {
					System.out.printf("Posistion %d,%d:%n", i, j);
					// Up
					if (i > 0)
						System.out.printf("Up:%d", vect[i - 1][j]);

					// Down
					if (i > 0)
					System.out.printf("Down:%d", vect[i + 1][j]);
				}
			}
		}
		System.out.println("Position");
		sc.close();
	}

}
